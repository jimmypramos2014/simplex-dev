{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <form id="form" action="{{ path('caja_edit', {'id': caja.id}) }}" class="form-horizontal needs-validation" role="form" method="post"  novalidate>

        <div class="card mx-auto mt-5">
            <div class="card-header">Informaci√≥n general</div>
            <div class="card-body">


                <div class="form-row">
                    <div class="form-group col-md-3">

                         {{ form_row(edit_form.codigo) }}

                    </div>                    
                    <div class="form-group col-md-3">

                        {{ form_row(edit_form.nombre) }}

                        <div class="invalid-feedback">
                            Este valor es requerido.
                        </div>               
                    </div>

                    <div class="form-group col-md-3">
                        {{ form_row(edit_form.local) }}
                         
                    </div>
                   
                    <div class="form-group col-md-3">
                        {{ form_row(edit_form.condicion) }}
                          
                    </div>

                  
                </div>

            </div>
        </div>


        {{ form_row(edit_form.estado) }}
        {{ form_widget(edit_form._token) }}
        <div class="mt-4">
            <p class="pull-right">
                <input type="button" value="Cancelar" class="btn btn-small"  onclick="location.href='{{ path('caja_index')}}'" />            
                <input type="submit" class="btn btn-small btn-primary" value="Guardar" />
            </p>
        </div>
        
    </form>

</div>
{% endblock %}

