{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gasto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gasto.id }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ gasto.monto }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if gasto.fecha %}{{ gasto.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gasto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gasto_edit', { 'id': gasto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
