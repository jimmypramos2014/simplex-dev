        function obtenerCliente() {

            var cliente = $('#cliente_select').val();
            var respuesta = '';

            $.ajax({
                method: "POST",
                async : false ,
                url: "{{ path('obtenercliente')}}",
                data: { id: cliente}
            })
            .done(function( data ) {

                respuesta = data;

            });

            return respuesta;
        }

        function buscar(id) {

            var fecha = $('#appbundle_notacredito_fecha').val();
            var moneda = $('#appbundle_notacredito_moneda').val();

