{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <form id="form" action="{{ path('productocategoria_edit', {'id': productoCategoria.id}) }}" class="form-horizontal needs-validation" role="form" method="post"  enctype="multipart/form-data" novalidate>

        <div class="card mx-auto mt-5">
            <div class="card-header">Informaci√≥n general</div>
            <div class="card-body">

                <div class="form-row">
                    <div class="form-group col-md-3">
                        {{ form_row(edit_form.nombre) }}
                        <div class="invalid-feedback">
                            Este valor es requerido.
                        </div>                      
                    </div>
                    {% if originalFile %}
                        <div class="form-group col-md-2">
                            <img src="{{ asset('uploads/imagenes/categoria/' ~ originalFile) }}" height="100" width="100"/>
                        </div>                           
                    {% endif %}                          
                    <div class="form-group col-md-3">
                        {{ form_row(edit_form.imagen) }}

                    </div>
                 
                    <div class="form-group col-md-4">
                        {{ form_row(edit_form.descripcion) }}
          
                    </div>

                </div>

            </div>
        </div>


        {{ form_row(edit_form.estado) }}
        {{ form_row(edit_form.empresa) }}
        {{ form_widget(edit_form._token) }}
        <div class="mt-4">
            <p class="pull-right">
                <input type="button" value="Cancelar" class="btn btn-small"  onclick="location.href='{{ path('productocategoria_index')}}'" />            
                <input type="submit" class="btn btn-small btn-primary" value="Guardar" />
            </p>
        </div>
        
    </form>

</div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}  

    <script type="text/javascript">

        $(document).ready(function() {

 
        });

    </script>

{% endblock %}  