{% extends 'base.html.twig' %}

{% block body %}

<div class="modal hide fade" tabindex="-1" role="dialog" id="myModal" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Aperturar caja</h4>
      </div>

      <form id="form" action="{{ path('caja_apertura', {'id': caja.id}) }}" class="form-horizontal needs-validation" role="form" method="post" novalidate>

        <div class="modal-body">

            <div class="form-row">

                <div class="form-group col-md-4">

                    <label for="montoAnterior" class="">Monto anterior</label>
                    <p id="montoAnterior" class="bg-success text-white">{{ montoAnterior | number_format(2,'.',',') }}</p>
                      
                </div>

                <div class="form-group col-md-4">

                    {{ form_row(form.caja) }}
                    <div class="invalid-feedback">
                        Este valor es requerido.
                    </div>   
                </div>                    
                <div class="form-group col-md-4">

                    {{ form_row(form.montoApertura) }}

                    <div class="invalid-feedback">
                        Este valor es requerido.
                    </div>               
                </div>               

              
            </div>
            {{ form_widget(form.usuario) }}
            {{ form_widget(form.estado) }}
            {{ form_widget(form._token) }}

        </div>


        <div class="modal-footer">

            <div class="mt-4">
                <p class="pull-right">
                    <input type="submit" class="btn btn-small btn-primary" value="Abrir Caja" />
                </p>
            </div>

        </div>

      </form>



    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->




{% endblock %}

{% block javascripts %}

    {{ parent() }} 

    <script type="text/javascript">
    
      $(window).on('load',function(){
        $('#myModal').modal('show');
      });

      $(document).ready(function() {



      });      

    </script>

          
{% endblock %}