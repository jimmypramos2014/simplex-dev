{% extends 'base.html.twig' %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container">

        <form id="form" action="{{ path('componentexdocumento_edit', { 'id': documento.id }) }}" class="form-horizontal needs-validation" role="form" method="post"  novalidate>

            <div class="card mx-auto mt-5">
                <div class="card-body">

                    <div class="row ">
                        <div class="col-lg-12 ">

                            <p class="pull-right">
                                <input type="button" value="Cancelar" class="btn btn-small "  onclick="location.href='{{ path('componentexdocumento_index',{'id':local} )}}'" />        
                                <input type="submit" class="btn btn-small btn-primary" value="Guardar" name="guardar"/>
                            </p>                        
                                                               
                        </div>
                    </div>

                    <div class="row mt-2 ">
                        <div class="col-lg-12">
                            <table id="" class="table table-striped table-bordered ">
                                <thead>
                                    <tr>
                                        <th>√çtem</th>
                                        <th>Documento</th>
                                        <th>Componente</th>
                                        <th>Posicion X (px)</th>
                                        <th>Posicion Y (px)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% set item = 1 %}
                                {% for coordenada in coordenadas %}
                                    <tr>
                                        <td>{{ item }}</td>
                                        <td>{{ coordenada.documento.nombre | upper }}</td>
                                        <td>{{ coordenada.componente.nombre | upper }}</td>
                                        <td><input type="text" class="form-control solonumeros" id="" name="posicionx_{{ coordenada.id }}" value="{{ coordenada.posicionY }}"/></td>
                                        <td><input type="text" class="form-control solonumeros" id="" name="posiciony_{{ coordenada.id }}" value="{{ coordenada.posicionX }}"/></td>

                                    </tr>
                                    {% set item = item + 1 %}
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                      
                    <div class="row ">
                        <div class="col-lg-12 ">
                            <p class="pull-right">
                                <input type="button" value="Cancelar" class="btn btn-small "  onclick="location.href='{{ path('componentexdocumento_index',{'id':local}) }}'" />        
                                <input type="submit" class="btn btn-small btn-primary" value="Guardar" name="guardar" />
                            </p>  
                        </div>
                    </div>

                </div>
            </div>

        </form>
    </div>


{% endblock %}
{% block javascripts %}

    {{ parent() }} 


    <script type="text/javascript">



    </script>
          
{% endblock %}