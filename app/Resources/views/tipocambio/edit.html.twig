{% endblock %}
{% block body %}

    <div class="container">

        <form id="form" action="{{ path('tipocambio_editar',{'id':tipoCambio.id}) }}" class="form-horizontal " role="form" method="post"  novalidate>
                <div class="card mx-auto mt-5">
                    <div class="card-header">Informaci√≥n general</div>
                    <div class="card-body">                

                        <div class="form-row">
                            <div class="form-group col-md-3">
                                {{ form_row(edit_form.fecha) }}
                  
                            </div>
                            <div class="form-group col-md-2">
                                {{ form_row(edit_form.compra) }}
 
                            </div>
                            <div class="form-group col-md-2">
                                {{ form_row(edit_form.venta) }}
 
                            </div>     
                         

                        </div>

                    </div>
                </div>
                
                {{ form_widget(edit_form.empresa) }}

                {{ form_widget(edit_form._token) }}

                <div class="mt-4">
