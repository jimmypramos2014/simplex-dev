{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cuentabanco</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cuentaBanco.id }}</td>
            </tr>
            <tr>
                <th>Banco</th>
                <td>{{ cuentaBanco.banco }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ cuentaBanco.codigo }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ cuentaBanco.numero }}</td>
            </tr>
            <tr>
                <th>Numerointerbancario</th>
                <td>{{ cuentaBanco.numeroInterbancario }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if cuentaBanco.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cuentabanco_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cuentabanco_edit', { 'id': cuentaBanco.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
