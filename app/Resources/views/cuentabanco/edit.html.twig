{% extends 'base.html.twig' %}

{% block body %}

 <div class="container">

    <form id="form" action="{{ path('cuentabanco_edit', {'id': cuentaBanco.id}) }}" class="form-horizontal needs-validation" role="form" method="post"  novalidate>

        <div class="card mx-auto mt-5">
            <div class="card-header">Informaci√≥n general</div>
            <div class="card-body">    
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(edit_form.banco) }}
                        <div class="invalid-feedback">
                            Este valor es requerido.
                        </div>                          
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        {{ form_row(edit_form.numero) }}
                        <div class="invalid-feedback">
                            Este valor es requerido.
                        </div>              
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(edit_form.numeroInterbancario) }}
              
                    </div>
                
                </div>

                <div class="form-row">
                    <div class="form-group col-md-2">
                        {{ form_row(edit_form.moneda) }}
                        <div class="invalid-feedback">
                            Este valor es requerido.
                        </div>                          
                    </div>
                    <div class="form-group col-md-2">
                        {{ form_row(edit_form.codigo) }}

                    </div>   

                    <div class="form-group col-md-2">
                        {{ form_label(edit_form.mostrarEnComprobante) }}
                        {{ form_widget(edit_form.mostrarEnComprobante) }}

                    </div>    
                                                 
                </div>


            </div>
        </div>
        {{ form_row(edit_form.estado) }}
        {{ form_widget(edit_form._token) }}

        <div class="mt-4">
            <p class="pull-right">
                <input type="button" value="Cancelar" class="btn btn-small"  onclick="location.href='{{ path('cuentabanco_index')}}'" />            
                <input type="submit" class="btn btn-small btn-primary" value="Guardar" />
            </p>
        </div>
        

    </form>

</div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}  

    <script type="text/javascript">

        $(document).ready(function() {

            var region_select            = $("#appbundle_empresalocal_departamento");
            var provincia_select         = $("#appbundle_empresalocal_provincia");    
            var distrito_select          = $("#appbundle_empresalocal_distrito");
  
        });

    </script>

{% endblock %}  