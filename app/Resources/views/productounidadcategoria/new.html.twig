{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <form id="form" action="{{ path('productounidadcategoria_new') }}" class="form-horizontal needs-validation" role="form" method="post"  novalidate>
                <div class="card mx-auto mt-5">
                    <div class="card-header">Informaci√≥n general</div>
                    <div class="card-body">                

                        <div class="form-row">
                            <div class="form-group col-md-2">
                                {{ form_row(form.codigo) }}
                   
                            </div>
                            <div class="form-group col-md-3">
                                {{ form_row(form.nombre) }}
                                <div class="invalid-feedback">
                                    Este valor es requerido.
                                </div>                                                 
                            </div>

                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                {{ form_row(form.descripcion) }}
                            </div>                                       
                        </div>

                    </div>
                </div> 


                {{ form_row(form.empresa) }}

                {{ form_widget(form._token) }}

                <div class="mt-4">
                    <p class="pull-right">
                        <input type="button" value="Cancelar" class="btn btn-small"  onclick="location.href='{{ path('productounidadcategoria_index')}}'" />            
                        <input type="submit" class="btn btn-small btn-primary" value="Guardar" />
                    </p>
                </div>

        </form>

    </div>



{% endblock %}

{% block javascripts %}

    {{ parent() }}  

    <script type="text/javascript">

        $(document).ready(function() {

            var tipo_select              = $("#appbundle_productounidad_tipo");
            var ratio_select             = $("#appbundle_productounidad_ratio");    

            tipo_select.on("change", function(){

                if(this.value == 'referencial'){
                    ratio_select.val(1);
                    ratio_select.prop('readonly',true);
                }else{
                    ratio_select.val('');
                    ratio_select.prop('readonly',false);
                }
            });
     
        });

    </script>

{% endblock %}  