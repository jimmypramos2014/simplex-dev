{% extends 'base.html.twig' %}


{% block body %}


{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}" role="alert">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<div class="container">


    <form id="form" action="{{ path('configuracion_edit') }}" class="form-horizontal needs-validation" role="form" method="post"  enctype="multipart/form-data" novalidate>

        <div class="card mx-auto mt-5">
            <div class="card-header">Informaci√≥n general</div>
            <div class="card-body"> 


                <div class="form-row">
                    <div class="form-group col-md-2">
                        {{ form_row(edit_form.nombreCorto) }}

                    </div>

                    <div class="form-group col-md-4">
                        {{ form_row(edit_form.direccionWeb) }}
            
                    </div>
                   
                    {% if originalFileLogo %}
                        <div class="form-group col-md-2">
                            <img src="{{ asset('uploads/imagenes/' ~ originalFileLogo) }}" height="50" width="170"/>
                        </div>                           
                    {% endif %}  

                    <div class="form-group col-md-3">
                        {{ form_row(edit_form.logo) }}
            
                    </div>
                
                </div>

                <div class="form-row">

                       
                    <div class="form-group col-md-3">
                        {{ form_row(edit_form.proformaFormato) }}
           
                    </div>

                    <div class="form-group col-md-3">
                        {{ form_row(edit_form.proformaOrientacion) }}
                    </div>

                                                 
                </div>


                <div class="form-row">

                    <div class="form-group col-md-3">
                        {{ form_row(edit_form.CorreoRemitente) }}
                    </div>   

                    <div class="form-group col-md-3">
                        {{ form_row(edit_form.PrefijoCodigoProducto) }}
                        <div class="invalid-feedback">
                            Este valor es requerido.
                        </div>   
                    </div>                                                      
                </div>


{#                 <div class="form-row">

                    {% if originalFileProducto %}
                        <div class="form-group col-md-2">
                            <img src="{{ asset('uploads/imagenes/100x100/' ~ originalFileProducto) }}" height="100" width="100"/>
                        </div>                           
                    {% endif %}    

                    <div class="form-group col-md-4">

                        {{ form_row(edit_form.imagenProductoDefault) }}
               
                    </div>
                      
                    {% if originalFileCategoria %}
                        <div class="form-group col-md-2">
                            <img src="{{ asset('uploads/imagenes/100x100/' ~ originalFileCategoria) }}" height="100" width="100"/>
                        </div>                           
                    {% endif %}  

                    <div class="form-group col-md-4">
                        {{ form_row(edit_form.imagenCategoriaDefault) }}
               
                    </div>                               
                </div>         #}



        </div>

        {{ form_row(edit_form.estado) }}        
        {{ form_widget(edit_form._token) }}

        <div class="mt-4 mr-2">
            <p class="pull-right">
                <input type="submit" class="btn btn-small btn-primary" value="Guardar" />
            </p>
        </div>
        

    </form>
</div>

{% endblock %}

