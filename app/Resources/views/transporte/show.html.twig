{% extends 'base.html.twig' %}

{% block body %}
    <h1>Transporte</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transporte.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ transporte.nombre }}</td>
            </tr>
            <tr>
                <th>Ruc</th>
                <td>{{ transporte.ruc }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if transporte.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('transporte_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('transporte_edit', { 'id': transporte.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
