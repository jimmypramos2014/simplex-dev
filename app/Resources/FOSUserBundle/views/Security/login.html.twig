{% extends '@FOSUser/layout.html.twig' %}

{% block fos_user_content %}


        <div class="container">
            <div class="py-5 text-center">
                <img class="logo d-block mx-auto mb-4" src="{{asset('template/img/logo.png')}}" alt="" >
            </div>
            <div class="card card-login mx-auto mt-5">

                {#<div class="card-header">{{empresa_nombre}}</div>#}

                <div class="card-body">

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
            
            
                    <form action="{{ path("fos_user_security_check") }}" method="post" id="login-form"  role="form">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                        <div class="form-group">
                            {#<label for="username">Usuario</label>#}
                            <input class="form-control" placeholder="Usuario" id="username" name="_username" value="{{ last_username }}"  autofocus>
                        </div>

                        <div class="form-group">
                            {#<label for="exampleInputPassword1">Contraseña</label>#}
                            <input class="form-control" placeholder="Contraseña" type="password" id="password" name="_password" value="">
                        </div>


                        <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-block">Ingresar</button>

                    </form>

                    <div class="text-center">
                        <a class="d-block small mt-3" href="{{ path('usuario_registro') }}">Registrarse</a>
                        <a class="d-block small" href="{{ path('fos_user_resetting_request') }}">¿Olvidó su contraseña?</a>
                    </div>

                </div>

            </div>

        </div>


{% endblock fos_user_content %}
